<div class="comment_div">
    {{#each comments}}
        <div class="comment_div">
            <img src={{image_url}} id="img-{{member_id}}"/>
            <p>{{comment_string}}</p>
        </div>
    {{/each}}
    <form id="newReply" action="/post/addComment" method="POST">
        <input type="text" name="id" value="{{post.id}}" class="hide">
        <input type="text" name="postString">        
        <input id="searchButton" type="submit" name="newReplyBtn" value="comment">
    </form>
    <span onclick="hideComments({{post.id}})">hide comments</span>
</div>