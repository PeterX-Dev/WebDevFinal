<div id="loginPage">
    <div id="loginPage-column1">
        <h1>Knowledge<span class="blue_font">Base</span></h1>
        <img id="kbIcon" src='https://i.ibb.co/TLnFXX0/vector-knowledge.jpg'/>
    </div>
    <div id="loginPage-column2">
        <form id="loginFm" action="/login/memberLogin" method="POST">        
            <input type="email" name="email" placeholder='email'>
            <input type="password" name="password" placeholder='password'>
            <input type="submit" class="blue_background" name="loginBtn" value="login">
        </form>
        <div id="loginPage-invalidMemberInfo">
            <p></p>
            {{#if InvalidMemberInfo}}
            <p id="invalidMemberWarning">Invalid email or password! Please check!</p>
            {{/if}}
        </div>      
        <h1>Join the world's largest community for knowledge sharing</h1>
        <div id="loginPage-invalidUserInfo">
            <p id="invalidNewUserWarning">{{invalidNewUserWarningText}}</p>
        </div>
        <form id="signupFm" action="/login/signup" method="POST"> 
            <div id="signupFm-name">
                <input type="text" name="firstName" placeholder='firstname'>
                <input type="text" name="lastName" placeholder='lastname'> 
            </div>
            <input type="email" name="email" placeholder='email'>
            <input type="password" name="password" placeholder='password'>
            <input type="password" name="confirmPwd" placeholder='confirm password'>
            <input type="submit" class="blue_background" name="signupBtn" value="signup">
        </form>     
    </div>
</div>
